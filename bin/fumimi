#!/usr/bin/env ruby

require "bundler/setup"
require "fumimi"

log = Logger.new(STDERR)
log.level = Logger::DEBUG

fumimi = Fumimi.new({
  server_id: ENV["DISCORD_SERVER_ID"].to_i,
  client_id: ENV["DISCORD_CLIENT_ID"],
  token: ENV["DISCORD_TOKEN"],
  log: log,
})

trap "INT" do
  # fumimi.log.debug("SIGINT received.")
  STDERR.puts "SIGINT received..."
  fumimi.shutdown!
end

fumimi.start
fumimi.update_feeds(comment_feed: "comment-feed", upload_feed: "upload-feed", forum_feed: "forum-feed")
